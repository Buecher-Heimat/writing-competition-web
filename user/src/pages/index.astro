    <section
      class="flex gap-10 px-10 flex-wrap py-16 bg-pearl-bush-50 justify-center items-center"
    >
      <img
        src="/images/logos/buecher-heimat.png"
        alt="Das Logo der Bücher-Heimat"
      />
      <img
        src="/images/logos/oeffentliche.png"
        alt="Das Logo der Öffentlichen Versicherung Braunschweig"
      />
      <img
        src="/images/logos/bad-harzburg-stiftung.png"
